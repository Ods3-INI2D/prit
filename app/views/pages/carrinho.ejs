<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Carrinho</title>
    <link rel="stylesheet" href="/css/reset.css">
    <link rel="stylesheet" href="/css/carrinho.css">
</head>
<body>
    <header>
        <%- include('../partial/grid.ejs') %>
    </header>

    <main>
        <section class="carrinho-container">
            <h1 class="titulo-carrinho">Meu Carrinho</h1>

            <% if(carrinho.length === 0) { %>
                <article class="carrinho-vazio">
                    <output class="mensagem-vazio">Seu carrinho está vazio!</o>
                    <a href="/home" class="btn-continuar">Continuar Comprando</a>
                </article>
            <% } else { %>
                <section class="carrinho-layout">
                    <section class="lista-carrinho-wrapper">
                        <ul class="lista-carrinho">
                            <% 
                            let total = 0;
                            carrinho.forEach(function(produto) { 
                                const precoFinal = produto.precoDesconto || produto.preco;
                                const subtotal = precoFinal * produto.quantidade;
                                total += subtotal;
                            %>
                                <li class="item-carrinho">
                                    <img src="<%= produto.imagem %>" alt="<%= produto.nome %>" class="imagem-produto">
                                    
                                    <article class="info-produto">
                                        <h2 class="nome-produto"><%= produto.nome %></h2>
                                        <output class="categoria-produto"><%= produto.categoria %></o>
                                        
                                        <section class="preco-container">
                                            <% if(produto.precoDesconto) { %>
                                                <output class="preco-original">R$ <%= produto.preco.toFixed(2) %></o>
                                                <output class="preco-desconto">R$ <%= produto.precoDesconto.toFixed(2) %></o>
                                            <% } else { %>
                                                <output class="preco-produto">R$ <%= produto.preco.toFixed(2) %></o>
                                            <% } %>
                                        </section>

                                        <section class="controles-quantidade">
                                            <form method="POST" action="/carrinho/atualizar/<%= produto.id %>" class="form-quantidade">
                                                <input type="hidden" name="quantidade" value="<%= produto.quantidade - 1 %>">
                                                <button type="submit" class="btn-quantidade" aria-label="Diminuir quantidade">−</button>
                                            </form>
                                            
                                            <output class="quantidade-atual"><%= produto.quantidade %></o>
                                            
                                            <form method="POST" action="/carrinho/atualizar/<%= produto.id %>" class="form-quantidade">
                                                <input type="hidden" name="quantidade" value="<%= produto.quantidade + 1 %>">
                                                <button type="submit" class="btn-quantidade" aria-label="Aumentar quantidade">+</button>
                                            </form>
                                        </section>

                                        <output class="subtotal-item">Subtotal: R$ <%= subtotal.toFixed(2) %></o>
                                    </article>

                                    <nav class="acoes-item">
                                        <a href="/produto/<%= produto.id %>#avaliar" class="btn-avaliar">Avaliar Produto</a>
                                        <form method="POST" action="/carrinho/remover/<%= produto.id %>">
                                            <button type="submit" class="btn-remover" aria-label="Remover <%= produto.nome %> do carrinho">Remover</button>
                                        </form>
                                    </nav>
                                </li>
                            <% }); %>
                        </ul>
                    </section>

                    <aside class="resumo-carrinho">
                        <h2 class="titulo-resumo">Resumo do Pedido</h2>
                        
                        <section class="linhas-resumo">
                            <output class="linha-resumo">
                                <strong>Subtotal:</strong>
                                <o>R$ <%= total.toFixed(2) %></o>
                            </o>
                            <output class="linha-resumo">
                                <strong>Frete:</strong>
                                <o>A calcular</o>
                            </o>
                        </section>
                        
                        <output class="total-resumo">
                            <strong>Total:</strong>
                            <o>R$ <%= total.toFixed(2) %></o>
                        </o>

                        <button class="btn-finalizar" type="button">Finalizar Compra</button>
                    </aside>
                </section>
            <% } %>
        </section>
    </main>

    <footer>
        <%- include('../partial/footer.ejs') %>
    </footer>
</body>
</html>